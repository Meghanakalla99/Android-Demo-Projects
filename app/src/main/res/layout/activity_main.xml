<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.9"
    android:background="@drawable/bluebg_cropped"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="My Kpop Playlist"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0277BD"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listview1"
        style="@android:style/Widget.DeviceDefault.Light.ListView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#00FFFFFF"
        android:paddingBottom="5sp"
        android:textAlignment="center" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekbar1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:progressTint="#0277BD"
        android:thumbTint="#0277BD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp">

        <Button
            android:id="@+id/button1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:background="#00FFFFFF"
            android:fadingEdge="horizontal|vertical"
            android:onClick="pause"
            android:requiresFadingEdge="horizontal|vertical"
            android:text="Pause"
            android:textColor="#0277BD"
            android:textSize="15sp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:background="#00FFFFFF"
            android:fadingEdge="horizontal|vertical"
            android:onClick="resume"
            android:requiresFadingEdge="horizontal|vertical"
            android:text="Resume"
            android:textColor="#0277BD"
            android:textSize="15sp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/button3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:background="#00FFFFFF"
            android:fadingEdge="horizontal|vertical"
            android:onClick="restart"
            android:requiresFadingEdge="horizontal|vertical"
            android:text="Restart"
            android:textColor="#0277BD"
            android:textSize="15sp"
            android:textStyle="bold"></Button>


        <Switch
            android:id="@+id/switch1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:text="LOOP"
            android:thumbTint="#0277BD"
            android:trackTint="#0277BD"
            android:textColor="#0277BD"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekbar2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:progressTint="#0277BD"
        android:thumbTint="#0277BD" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:text="Get Lyrics"
        android:background="#00FFFFFF"
        android:textColor="#0277BD"
        android:textSize="15sp"
        android:onClick="getLyrics"
        android:textStyle="bold"/>

</LinearLayout>
